{
  "name": "todo-app",
  "private": true,
  "version": "1.3.0",
  "description": "TODO App with Obsidian Integration",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "tsc -p tsconfig.server.json && node server-dist/index.js",
    "server:dev": "concurrently \"npm run dev\" \"npm run server\"",
    "electron:compile": "tsc -p tsconfig.electron.json && move electron\\main.js electron\\main.cjs 2>nul & move electron\\preload.js electron\\preload.cjs 2>nul || true",
    "electron:start": "powershell -Command \"& {./node_modules/electron/dist/electron.exe .}\"",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:compile && cross-env NODE_ENV=development npm run electron:start\"",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:preview": "npm run build && npm run electron:compile && npm run electron:start"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "cors": "^2.8.6",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.todoapp.app",
    "productName": "TODO App",
    "files": [
      "dist/**/*",
      "electron/**/*.cjs",
      "build/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "directories": {
      "output": "dist-electron"
    },
    "publish": {
      "provider": "github",
      "owner": "dlwldbs15",
      "repo": "TODOAPP"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "${productName} ${version}"
    },
    "linux": {}
  }
}
